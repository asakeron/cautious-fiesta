{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "sumneko.lua",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "files.associations": {
                    "*.rockspec": "lua",
                    ".busted": "lua"
                },
                "Lua.workspace.library": [
                    "./lua_modules"
                ]
            }
        }
    }
}